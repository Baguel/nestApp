<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div
  x-data="{ userDropdownOpen: false, notificationsDropdownOpen: false, mobileNavOpen: false }"
>
  <!-- Page Container -->
  <div
    id="page-container"
    class="mx-auto flex min-h-screen w-full min-w-[320px] flex-col bg-white lg:pt-20"
  >
    <!-- END Page Header -->

    <!-- Page Content -->
    <main id="page-content" class="flex max-w-full flex-auto flex-col">
      <!-- Page Heading -->
      <div class="container mx-auto px-4 pt-6 lg:px-8 lg:pt-8 xl:max-w-7xl">
        <div
          class="flex flex-col gap-2 text-center sm:flex-row sm:items-center sm:justify-between sm:text-start"
        >
          <div class="grow">
            <h1 class="mb-1 text-xl font-bold">Details Tickets</h1>
          </div>
          <div
            class="flex flex-none items-center justify-center gap-2 rounded-sm sm:justify-end"
          >
          </div>
        </div>
      </div>
      <!-- END Page Heading -->

      <!-- Page Section -->
      <div class="container mx-auto p-4 lg:p-8 xl:max-w-7xl">
        <div
          class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4 lg:gap-8"
        >
          <!-- Tickets -->
          <div
            class="flex flex-col rounded-lg border border-neutral-200 bg-white sm:col-span-2 lg:col-span-4"
          >
            <div
              class="flex flex-col items-center justify-between gap-4 border-b border-neutral-100 p-5 text-center sm:flex-row sm:text-start"
            >
              <div>
                <h2 class="mb-0.5 font-semibold">Tickets</h2>
              </div>
            </div>
            <div class="p-5">
              <!-- Responsive Table Container -->
              <div class="min-w-full overflow-x-auto rounded-sm">
                <!-- Alternate Responsive Table -->
                <div class="min-w-full align-middle text-sm space-y-5">
                    <div class="flex">
                        <h1 class="font-semibold text-xl">Evenement : </h1>
                        <h1 class="text-xl"> {{concert.name}}</h1>
                    </div>
                    <div class="flex">
                        <h1 class="font-semibold text-xl">description: </h1>
                        <h1 class="text-xl"> {{concert.description}}</h1>
                    </div>
                     <div class="flex">
                        <h1 class="font-semibold text-xl">Lieu : </h1>
                        <h1 class="text-xl"> {{concert.lieu}}</h1>
                    </div>
                    <div class="flex">
                        <h1 class="font-semibold text-xl">Date : </h1>
                        <h1 class="text-xl"> {{concert.date}}</h1>
                    </div>
                    <div class="flex">
                        <h1 class="font-semibold text-xl">Genre : </h1>
                        <h1 class="text-xl"> {{concert.genre}}</h1>
                    </div>
                    <div class="flex">
                        <h1 class="font-semibold text-xl">Acheteur : </h1>
                        <h1 class="text-xl"> {{user.username}}</h1>
                    </div>
                    <div class="flex">
                        <h1 class="font-semibold text-xl">Acheteur : </h1>
                        <h1 class="text-xl"> {{user.number}}</h1>
                    </div>
                    <div class="flex">
                        <img src={{qrCode}} class="w-50 h-50">
                    </div>
                </div>
                <!-- END Alternate Responsive Table -->
              </div>
              <!-- END Responsive Table Container -->
            </div>
          </div>
          <!-- END Tickets -->
        </div>
      </div>
      <!-- END Page Section -->
    </main>
  </div>
  <!-- END Page Container -->
</div>
</body>
</html>